<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chatLog_from_chatIcon"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:civ_border_color="@android:color/black"
            app:civ_border_width="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <TextView
            android:id="@+id/chatLog_from_messageContent"
            android:text="this message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:maxWidth="240dp"
            android:background="@drawable/rounded_edittext_register_login"
            android:padding="16dp"
            app:layout_constraintStart_toEndOf="@+id/chatLog_from_chatIcon"
            app:layout_constraintTop_toTopOf="@+id/chatLog_from_chatIcon"/>
</androidx.constraintlayout.widget.ConstraintLayout>